{
  "name": "lendable/twig-bundle",
  "type": "symfony-bundle",
  "description": "load twig templates from the database",
  "license": "MIT",
  "keywords": [
    "twig",
    "symfony",
    "bundle",
    "lendable"
  ],
  "authors": [
    {
      "name": "Lendable Ltd",
      "email": "dev@lendable.co.uk"
    }
  ],
  "autoload": {
    "psr-4": {
      "Alpha\\TwigBundle\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Alpha\\TwigBundle\\Tests\\": "tests/"
    }
  },
  "require": {
    "php": ">=7.0",
    "twig/twig": "~1.26|~2.0",
    "symfony/symfony": "~2.7|~3.0|~4.0",
    "symfony/framework-bundle": "~2.7|~3.0|~4.0",
    "sonata-project/admin-bundle": "~3.0",
    "symfony/twig-bundle": "~2.7|^3.0|^4.0",
    "doctrine/doctrine-bundle": "*",
    "doctrine/orm": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^6.0",
    "roave/security-advisories": "dev-master",
    "jakub-onderka/php-parallel-lint": "^0.9.2",
    "friendsofphp/php-cs-fixer": "^2.10"
  },
  "scripts": {
    "validate-files": [
      "vendor/bin/parallel-lint --exclude vendor ."
    ],
    "code-style": [
      "vendor/bin/php-cs-fixer fix --config='./.php_cs' --show-progress=none --dry-run --no-interaction -v"
    ],
    "tests": [
      "vendor/bin/phpunit"
    ]
  }
}
